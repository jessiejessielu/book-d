  <section class="jumbotron text-center">
    <div class="container">
      <h1> {{user}} Add Book</h1>
      <ul class="nav nav-tabs justify-content-center">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle main-link" data-bs-toggle="dropdown" href="#" role="button"
            aria-expanded="false">MENU</a>
          <ul class="dropdown-menu">
            <li><a class="main-link" href="/dashboard">Recommendation</a></li>
            <hr />
            <li><a class="main-link" href="/profile">Profile</a></li>
            <hr />
            <li><a class="main-link" href="/add-book">Add Book</a>
            <li>
          </ul>
        </li>
      </ul>
    </div>
  </section>

  <div class="text-center">
  <form action="/add-book" method="POST" enctype="multipart/form-data">
    <fieldset>
      <label for="coverimage"> <strong>Upload cover image: </strong></label><br />
      <input name="cover" type="file" required id="coverimage" /><br />
    </fieldset>
    <fieldset>
      <input type="text" placeholder="Title" name="book-title"></br>
      <input type="text" placeholder="Author" name="book-author"></br>
      <input type="text" placeholder="Description" name="book-description"></br>
      <label for="category"><strong>Select Genre *: </strong></label><br>
      <select name="book-genre" id="book-genre">
        <option value="Fiction">Fiction</option>
        <option value="Nonfiction">Nonfiction</option>
        <option value="Romance">Romance</option>
      </select> </br>
    </fieldset>
    <fieldset>
      <label for="keywords"><strong>Choose keywords *: </strong></label><br>
      <select name="keywords" id="keywords" multiple>
        <option value="Historical Fiction">Historical Fiction</option>
        <option value="Women’s Fiction">Women’s Fiction</option>
        <option value="Literary Fiction">Literary Fiction</option>
        <option value="History">History</option>
        <option value="Science">Science</option>
        <option value="Business">Business</option>
        <option value="Contemporary Romance ">Contemporary Romance </option>
        <option value="Historical Romance">Historical Romance</option>
        <option value="Romantic Suspense">Romantic Suspense</option>
        <option value="crimeFiction">Crime Fiction</option>

      </select>
      <br>
      <br>
      <p>* Hold down the Ctrl (windows) or Command (Mac) button to select multiple options.</p>

    </fieldset>

    <button class="btn btn-lg btn-primary btn-block" id="signIn-2" type="submit">Submit</button>
  </form>
  </div>

  <footer class="text-center">
    <div class="container">
      <hr>
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
      <p> &copy; Copyright 2021 by Book'd</p>

    </div>
  </footer>
</body>

</html>